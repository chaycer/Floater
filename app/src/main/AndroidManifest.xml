<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.company.cc.floater">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".FloaterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".HomeScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PlayerSearch" />
        <activity android:name=".TeamSearch" />
        <activity android:name=".StatSearch" />
        <activity android:name=".AddPlayer" />
        <activity
            android:name=".PlayerProfile"
            android:label="@string/title_activity_player_profile" />
        <activity
            android:name=".StatSearchResults"
            android:label="@string/title_activity_stat_search_results" />
        <activity
            android:name=".ManagerSearch"
            android:label="@string/title_activity_manager_search"></activity>
    </application>

</manifest>